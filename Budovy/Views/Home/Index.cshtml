@using Budovy.Controllers.Budovy.objects
@model Budovy.Models.AddModels.AddBuildingModel
@{
    ViewData["Title"] = "Home Page";
}

@{
    <div class="mb-5">
        <form asp-controller="Home" asp-action="Index">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" type="text" name="name" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Desc">Description</label>
                <input asp-for="Desc" type="text" class="form-control"/>
            </div>
            <input type="submit" value="Add building" class="btn-primary mt-3 rounded-3"/>
        </form>
    </div>

    foreach (var i in (ViewData["data"] as IList<Building>)!)
    {
        Console.Out.WriteLine(i);
        <div class="border-bottom d-inline">
            <h1>@i.Name</h1>
            <p>@i.Description</p>
            <button class="btn-primary" value="@i.Id.ToString()">Open Detail</button>
        </div>
    }
}